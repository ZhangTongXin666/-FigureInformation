<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <view.DrawHookViewView
        android:layout_marginTop="20dp"
        android:id="@+id/drawHook_handMoveMent_dhvc"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/clearSuccess_handMoveMent_tv"
        android:layout_marginTop="10dp"
        android:text="正在清理本地缓存"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/sure_systemSet_bt"
        android:layout_marginTop="10dp"
        android:text="确定"
        android:background="@drawable/systemset_button_bg"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />
</LinearLayout>
